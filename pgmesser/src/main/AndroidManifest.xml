<manifest package="us.pinguo.messer"
          xmlns:android="http://schemas.android.com/apk/res/android">

    <uses-permission android:name="android.permission.SYSTEM_ALERT_WINDOW"/>

    <application
        android:allowBackup="true"
        android:supportsRtl="true">

        <activity android:name="us.pinguo.messer.db.DbActivity"
            android:configChanges="orientation"
            android:screenOrientation="portrait"
            android:taskAffinity="us.pinguo.messer"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar">
        </activity>

        <activity
            android:name=".local.LocalFileBrowserActivity"
            android:configChanges="orientation"
            android:screenOrientation="portrait"
            android:taskAffinity="us.pinguo.messer"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar"/>

        <activity
            android:name=".image.ImageBrowserActivity"
            android:configChanges="orientation"
            android:screenOrientation="portrait"
            android:taskAffinity="us.pinguo.messer"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar"/>
    </application>
</manifest>


